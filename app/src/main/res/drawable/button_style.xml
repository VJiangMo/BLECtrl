<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/text_color_blue" android:endColor="@color/text_color_light_blue"
                android:angle="270" />
            <stroke android:width="1dip" android:color="@color/button_gey" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/viewfinder_mask" android:endColor="@color/text_color_gey_white"
                android:angle="180" />
            <stroke android:width="1dip" android:color="@color/button_gey" />
            <corners android:radius="5dip" />11
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
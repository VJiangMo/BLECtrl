<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@null"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@null">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/text_color_gey"
                android:text="连接状态："/>
            <TextView
                android:id="@+id/connect_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/red"
                android:text="未连接"/>
        </LinearLayout>
        <Button
            android:id="@+id/reconnect_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_gey"
            android:textSize="18sp"
            android:text="重新搜索" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/light_state_rb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/light_state_red_led_bright"
                android:textSize="20sp"
                android:textColor="@color/button_gey"/>
            <TextView
                android:id="@+id/light_state_rd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/light_state_red_led_dark"
                android:textSize="20sp"
                android:textColor="@color/button_gey"/>
            <TextView
                android:id="@+id/light_state_bo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/light_state_blue_led_on"
                android:textSize="20sp"
                android:textColor="@color/button_gey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/light_state_rbf"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/light_state_red_led_bling_fast"
                android:textSize="20sp"
                android:textColor="@color/button_gey"/>
            <TextView
                android:id="@+id/light_state_rbs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/light_state_red_led_bling_slow"
                android:textSize="20sp"
                android:textColor="@color/button_gey"/>
            <TextView
                android:id="@+id/light_state_brb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/light_state_blue_red_bling"
                android:textSize="20sp"
                android:textColor="@color/button_gey"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:layout_height="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/led_on_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="开"
            android:textColor="@color/text_color_gey"
            android:textSize="25sp"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/led_off_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="关"
            android:textColor="@color/text_color_gey"
            android:textSize="25sp"
            android:background="@drawable/button_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/led_switch_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="切换"
            android:textColor="@color/text_color_gey"
            android:textSize="25sp"
            android:background="@drawable/button_style"/>
    </LinearLayout>

</LinearLayout>